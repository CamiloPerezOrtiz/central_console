{% include '@App/plantillas/cabecera.html.twig' %}
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Device
        </h1>
    </section>
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Choose a group to get more information</h3>
            </div>
            <div class="box-body">
                {% for msg in app.session.flashbag().get('estatus') %}
                    <div class="container">
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-info" aria-label="Close">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Info!</strong> {{ msg }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <div class="row">
                    <div class="col-md-6">
                        <form method="post">
                            <div class="form-group">
                                <label>Campus</label>
                                <select class="form-control" name="ubicacion">
                                    {% for informacion_descripcion in informacion_grupos_descripcion %}
                                        <option value="{{ informacion_descripcion.descripcion }}">{{ informacion_descripcion.descripcion }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="box-footer">
                                <button type="submit" class="btn btn-info pull-right" name="solicitar" type="submit">Consult</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Instructions</label>
                            <p>Select the name of the device to get more information.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
