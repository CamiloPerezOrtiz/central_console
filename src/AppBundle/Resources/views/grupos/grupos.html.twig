{% include '@App/plantillas/cabecera.html.twig' %}
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            All groups
        </h1>
    </section>
    <section class="content">
        <div class="row">
            {% for grupos in grupo %}
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-blue">
                        <div class="inner">
                            <h3>{{ grupos.nombre }}</h3>
                        </div>
                        <div class="icon">
                            <i class="fa fa-list"></i>
                        </div>
                        <a href="{{ path('ver_ip',{ id:grupos.nombre }) }}" class="small-box-footer">Show IP and their associated device <i class="fa fa-arrow-circle-right"></i></a>
                        <a href="{{ path('registro_usuario_grupo',{ grupo:grupos.nombre }) }}" class="small-box-footer">Create new user <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
</div>
